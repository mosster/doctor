//-------------------------------------------
//- Variables
//-------------------------------------------
- var metaTitle     =   ''
- var metaDesc      =   ''
- var metaKeywords  =   ''

//-------------------------------------------
//- Start layout.jade
//-------------------------------------------

doctype html
html(lang='en')

  head
    //- SEO
    title !{clinic.name}
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='#{metaDesc}')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(name="keywords" content="#{metaKeywords}")

    //- CSS
    link(rel='shortcut icon' type='image/x-icon' href='favicon.ico')
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')

    //- Fonts
    script(type="text/javascript", src="https://use.typekit.net/ykp2ujf.js")
    script(type="text/javascript").
        try{Typekit.load({ async: true });}catch(e){}

  body(class='#{bodyClass}')
    //- Content
    block layout

    //- Scripts
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js')
    script(type='text/javascript', src='/js/main.min.js')
    script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?v=3.exp')


