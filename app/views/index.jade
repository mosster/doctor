    function init_map(){var myOptions = {zoom:10,center:new google.maps.LatLng(28.570840100000016,77.22184829921892),mapTypeId: google.maps.MapTypeId.ROADMAP};map = new google.maps.Map(document.getElementById('gmap_canvas'), myOptions);marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(28.570840100000016,77.22184829921892)});infowindow = new google.maps.InfoWindow({content:'<strong>Title</strong><br>C-545 Chandra Gupta Vithi Rd Block C Defence Colony Block C Defence Colony New Delhi Delhi 110049, India<br>'});google.maps.event.addListener(marker, 'click', function(){infowindow.open(map,marker);});infowindow.open(map,marker);}google.maps.event.addDomListener(window, 'load', init_map);

