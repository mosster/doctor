extends ./layout.jade

block content

  //-------------------------
  //- Header
  //-------------------------
  include includes/header

  //-------------------------
  //- About Us
  //-------------------------
  section#about-us
    .wrapper-inner.section--border
      h2 About Us
      h6 !{clinic.name}

      .about !{about}

      .gallery
        .gallery__item--featured #[img(src='#{gallery[0]}', alt='')]
        .gallery__group
          each photo in gallery
            .gallery__item #[img(src='#{photo}', alt='')]

  //-------------------------
  //- Doctors
  //-------------------------
  section#doctors
    .wrapper-inner.section--border
      h2 Doctors

      .wrapper-cards
        each doctor in doctors
          .card
            .card__img
              img.img--circle(src='#{doctor.photo}')
            .card__title
              h6.margin-bottom--small !{doctor.specialty}
              h3 !{doctor.name}
            .card__desc
              span.caption !{doctor.desc}

  //-------------------------
  //- Services
  //-------------------------
  section#services
    .wrapper-inner.margin-bottom--xlarge
      h6 Services

      ul.services__list
        each service in services
          li.services__item !{service}

  //-------------------------
  //- Information
  //-------------------------
  section#information.section__info
    .wrapper-inner.wrapper-info
      .info-card
        .info-card__inner
          h2.info-card__title Information

          .info-card__row
            .info-card__icon
              .span.ion-android-map
            .info-card__desc
              h6.margin-bottom--small.color--white Location
              h3.font--light !{clinic.name}
              p.margin--zero.caption !{clinic.address} 
              p.caption !{clinic.city}, !{clinic.state} - !{clinic.zip}
              a.color--white(href='#{clinic.directions}', target='_blank') Get directions here
              span.ion-android-arrow-forward.color--white.middle-character

          .info-card__row
            .info-card__icon
              .span.ion-android-alarm-clock
            .info-card__desc
              h6.margin-bottom--small.color--white Schedule
              h3.font--light !{clinic.schedule.days}
              h3.font--light.margin--zero !{clinic.schedule.time}

  .wrapper-inner.wrapper-inner--full
    .google-map(style="background-image:url(https://maps.googleapis.com/maps/api/staticmap?zoom=14&scale=2&size=1280x1280&markers=color:red|#{clinic.latitude},#{clinic.longitude}&key=AIzaSyDYadCNEyN8c9pk1XHRhe-XhNtdGMRWoLM)")

  //-------------------------
  //- Book Appointment
  //-------------------------
  section#appointment.section__book
    h1.color--white.margin-bottom--xlarge Book an appointment

    .wrapper-inner
      form
        .input-group
          input(type='text', placeholder='First Name')
        .input-group
          input(type='text', placeholder='Last Name')
        .input-group
          input(type='text', placeholder='Email Address')
        .input-group
          textarea(rows='10')
        .input-group
          a.btn--brand-2.btn--full.btn--large.btn--shadow-light Submit

    .wrapper-footer Powered by #[a.color--gray-darkest(href='http://dylal.com/') Dylal]
